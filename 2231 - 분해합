#include <iostream>
#include <string>

using namespace std;

int foo(int n) {
	string s = to_string(n);
	int result=0;
	for (int i = 0; i < s.length(); i++) {
		result += s[i] - '0';	//각 자리수를 더해주고
	}
	result += n;	//생성자를 더해준다.

	return result;	//분해합 후보
}

int main(void) {
	ios::sync_with_stdio(false);
	int input;
	int plus = 1;
	int temp;
	cin >> input;

	while (true) {
		temp = foo(plus++);
		if (temp == input)
		{
			cout << plus-1;	//plus ++ 이기때문에 함수가 끝나면 +1!
			break;
		}
		else if (plus > input) {	//생성자가 분해합보다 클수는 없음.
			cout << 0;
			break;
		}
		
	}

	system("pause");
	return 0;
}
